  <div class="col-md-12">
    <h1>
      Book Recommendations
    </h1>
  </div>
</div>

<hr>

<p><%= alert %></p>
<p><%= notice %></p>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new book
    </h2>

    <form action="/insert_book" method="post">
      <div class="form-group">
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="title_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="author_box">
          Author
        </label>

        <input type="text" id="author_box" name="author_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="description_from_query" class="form-control" rows="3"></textarea>
      </div>

      <div class="form-group">

        <input type="hidden" id="users_id_box" name="users_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="genre_topic_box">
          Genre topic
        </label>

        <input type="text" id="genre_topic_box" name="genre_topic_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="comments_box">
          Comments
        </label>

        <textarea id="comments_box" name="comments_from_query" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create book
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Author
        </th>

        <th>
          Description
        </th>

        <th>
          Added By
        </th>

        <th>
          Genre topic
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
          Bookmark
        </th>

        <th>
        </th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.id %>
        </td>

        <td>
          <%= book.title %>
        </td>

        <td>
          <%= book.author %>
        </td>

        <td>
          <%= book.description %>
        </td>

        <td>
          <%= book.poster %>
        </td>

        <td>
          <%= book.genre_topic %>
        </td>

        <td>
          <%= book.comments %>
        </td>

        <td>
          <%= time_ago_in_words(book.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(book.updated_at) %> ago
        </td>

        <td>
        <% like = Like.where({:users_id => @current_user.id, :books_id => book.id}).at(0)%>
         <% if like.present? %>
  <a href="/delete_like/<% book.id %>">
  Remove Bookmark
  </a>
  <% else %>
      <form action="insert_like" method="post">
      <input type= "hidden" value="<%= book.id %>" name="id_from_query">
      <button>Bookmark</button>
   </form>
   <% end %>
        </td>

        <td>
          <a href="/books/<%= book.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
