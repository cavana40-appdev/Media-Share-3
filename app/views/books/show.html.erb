<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Book Details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/books" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_book/<%= @book.id %>" class="btn btn-block btn-outline-secondary">
          Delete book
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @book.title %>
      </dd>

      <dt>
        Author
      </dt>
      <dd>
        <%= @book.author %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @book.description %>
      </dd>

      <dt>
        Users
      </dt>
      <dd>
        <%= @book.users_id %>
      </dd>

      <dt>
        Genre topic
      </dt>
      <dd>
        <%= @book.genre_topic %>
      </dd>

      <dt>
        Comments
      </dt>
      <dd>
        <%= @book.comments %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@book.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@book.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit book
    </h2>

    <form action="/modify_book/<%= @book.id %>"  method="post" >
      <div class="form-group">
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="title_from_query" class="form-control" value="<%= @book.title %>">
      </div>

      <div class="form-group">
        <label for="author_box">
          Author
        </label>

        <input type="text" id="author_box" name="author_from_query" class="form-control" value="<%= @book.author %>">
      </div>

      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="description_from_query" class="form-control" rows="3"><%= @book.description %></textarea>
      </div>

      <div class="form-group">
        <label for="users_id_box">
          Users
        </label>

        <input type="text" id="users_id_box" name="users_id_from_query" class="form-control" value="<%= @book.users_id %>">
      </div>

      <div class="form-group">
        <label for="genre_topic_box">
          Genre topic
        </label>

        <input type="text" id="genre_topic_box" name="genre_topic_from_query" class="form-control" value="<%= @book.genre_topic %>">
      </div>

      <div class="form-group">
        <label for="comments_box">
          Comments
        </label>

        <textarea id="comments_box" name="comments_from_query" class="form-control" rows="3"><%= @book.comments %></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update book
      </button>
    </form>
  </div>
</div>

<hr>
