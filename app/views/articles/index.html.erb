<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all articles
    </h1>
  </div>
</div>

<hr>

<p><%= alert %></p>
<p><%= notice %></p>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new article
    </h2>

    <form action="/insert_article" method="post">
      <div class="form-group">
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="title_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="author_box">
          Author
        </label>

        <input type="text" id="author_box" name="author_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="link_box">
          Link
        </label>

        <input type="text" id="link_box" name="link_from_query" class="form-control">
      </div>

      <div class="form-group">

        <input type="hidden" id="users_id_box" name="users_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="genre_topic_box">
          Genre topic
        </label>

        <input type="text" id="genre_topic_box" name="genre_topic_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="description_from_query" class="form-control" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="comments_box">
          Comments
        </label>

        <textarea id="comments_box" name="comments_from_query" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create article
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Author
        </th>

        <th>
          Link
        </th>

        <th>
          Added By
        </th>

        <th>
          Genre topic
        </th>

        <th>
          Description
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @articles.each do |article| %>
      <tr>
        <td>
          <%= article.id %>
        </td>

        <td>
          <%= article.title %>
        </td>

        <td>
          <%= article.author %>
        </td>

        <td>
          <%= article.link %>
        </td>

        <td>
          <%= article.poster %>
        </td>

        <td>
          <%= article.genre_topic %>
        </td>

        <td>
          <%= article.description %>
        </td>

        <td>
          <%= article.comments %>
        </td>

        <td>
          <%= time_ago_in_words(article.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(article.updated_at) %> ago
        </td>

        <td>
          <a href="/articles/<%= article.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
