    <div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Show Details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/shows" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_show/<%= @show.id %>" class="btn btn-block btn-outline-secondary">
          Delete show
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @show.title %>
      </dd>

      <dt>
        Source
      </dt>
      <dd>
        <%= @show.source %>
      </dd>

      <dt>
        Added By
      </dt>
      <dd>
        <%= @show.poster %>
      </dd>

      <dt>
        Genre
      </dt>
      <dd>
        <%= @show.genre_topic %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @show.description %>
      </dd>

      <dt>
        Comments
      </dt>
      <dd>
        <%= @show.comments %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@show.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@show.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit show
    </h2>

    <form action="/modify_show/<%= @show.id %>"  method="post" >
      <div class="form-group">
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="title_from_query" class="form-control" value="<%= @show.title %>">
      </div>

      <div class="form-group">
        <label for="source_box">
          Source
        </label>

        <input type="text" id="source_box" name="source_from_query" class="form-control" value="<%= @show.source %>" placeholder="Netflix, Amazon Prime, etc...">
      </div>

      <div class="form-group">

        <input type="hidden" id="users_id_box" name="users_id_from_query" class="form-control" value="<%= @show.users_id %>">
      </div>

      <div class="form-group">
        <label for="genre_topic_box">
          Genre
        </label>

        <select id="genre_topic_box" name="genre_topic_from_query" class="form-control" value="<%= @show.genre_topic %>">
      <option value="Action & Adventure">Action & Adventure</option>
        <option value="Animation">Animation</option>
        <option value="Biography">Biography</option>
        <option value="Classics">Classics</option>
        <option value="Comedy">Comedy</option>
        <option value="Documentary">Documentary</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Film Noir">Film Noir</option>
        <option value="History">History</option>
        <option value="Horror">Horror</option>
        <option value="International">International</option>
        <option value="Indie & Art House">Indie & Art House</option>
        <option value="Musical">Musical</option>
        <option value="Mystery">Mystery</option>
        <option value="Romance">Romance</option>
        <option value="Sci-Fi & Fantasy">Sci-Fi & Fantasy</option>
        <option value="Short Film">Short Film</option>
        <option value="Thriller">Thriller</option>
        <option value="Western">Western</option>
        </select>
        </div>

      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="description_from_query" class="form-control" rows="3"><%= @show.description %></textarea>
      </div>

      <div class="form-group">
        <label for="comments_box">
          Comments
        </label>

        <textarea id="comments_box" name="comments_from_query" class="form-control" rows="3"><%= @show.comments %></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update show
      </button>
    </form>
  </div>
</div>

<hr>
