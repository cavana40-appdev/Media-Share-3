    <div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Film Details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/films" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_film/<%= @film.id %>" class="btn btn-block btn-outline-secondary">
          Delete film
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @film.title %>
      </dd>

      <dt>
        Source
      </dt>
      <dd>
        <%= @film.source %>
      </dd>

      <dt>
        Added By
      </dt>
      <dd>
        <%= @film.poster %>
      </dd>

      <dt>
        Genre topic
      </dt>
      <dd>
        <%= @film.genre_topic %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @film.description %>
      </dd>

      <dt>
        Comments
      </dt>
      <dd>
        <%= @film.comments %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@film.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@film.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit film
    </h2>

    <form action="/modify_film/<%= @film.id %>"  method="post" >
      <div class="form-group">
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="title_from_query" class="form-control" value="<%= @film.title %>">
      </div>

      <div class="form-group">
        <label for="source_box">
          Source
        </label>

        <input type="text" id="source_box" name="source_from_query" class="form-control" value="<%= @film.source %>">
      </div>

      <div class="form-group">

        <input type="hidden" id="users_id_box" name="users_id_from_query" class="form-control" value="<%= @film.users_id %>">
      </div>

      <div class="form-group">
        <label for="genre_topic_box">
          Genre topic
        </label>

        <input type="text" id="genre_topic_box" name="genre_topic_from_query" class="form-control" value="<%= @film.genre_topic %>">
      </div>

      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="description_from_query" class="form-control" rows="3"><%= @film.description %></textarea>
      </div>

      <div class="form-group">
        <label for="comments_box">
          Comments
        </label>

        <textarea id="comments_box" name="comments_from_query" class="form-control" rows="3"><%= @film.comments %></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update film
      </button>
    </form>
  </div>
</div>

<hr>
