    <div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Film Recommendations
    </h1>
  </div>
</div>

<hr>

<p><%= alert %></p>
<p><%= notice %></p>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new film
    </h2>

    <form action="/insert_film" method="post">
      <div class="form-group">
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="title_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="source_box">
          Source
        </label>

        <input type="text" id="source_box" name="source_from_query" class="form-control" placeholder="Netflix, Amazon Prime, etc...">
      </div>

      <div class="form-group">

        <input type="hidden" id="users_id_box" name="users_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="genre_topic_box">
          Genre
        </label>

        <select id="genre_topic_box" name="genre_topic_from_query" class="form-control">
        <option value="Action & Adventure">Action & Adventure</option>
        <option value="Animation">Animation</option>
        <option value="Biography">Biography</option>
        <option value="Classics">Classics</option>
        <option value="Comedy">Comedy</option>
        <option value="Documentary">Documentary</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Film Noir">Film Noir</option>
        <option value="History">History</option>
        <option value="Horror">Horror</option>
        <option value="International">International</option>
        <option value="Indie & Art House">Indie & Art House</option>
        <option value="Musical">Musical</option>
        <option value="Mystery">Mystery</option>
        <option value="Romance">Romance</option>
        <option value="Sci-Fi & Fantasy">Sci-Fi & Fantasy</option>
        <option value="Short Film">Short Film</option>
        <option value="Thriller">Thriller</option>
        <option value="Western">Western</option>
        </select>
      </div>

      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="description_from_query" class="form-control" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="comments_box">
          Comments
        </label>

        <textarea id="comments_box" name="comments_from_query" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create film
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Title
        </th>

        <th>
          Source
        </th>

        <th>
          Added By
        </th>

        <th>
          Genre
        </th>

        <th>
          Description
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

         <th>
          Bookmark
        </th>

        <th>
        </th>
      </tr>

      <% @films.each do |film| %>
      <tr>

        <td>
          <%= film.title %>
        </td>

        <td>
          <%= film.source %>
        </td>

        <td>
          <%= film.poster %>
        </td>

        <td>
          <%= film.genre_topic %>
        </td>

        <td>
          <%= film.description %>
        </td>

        <td>
          <%= film.comments %>
        </td>

        <td>
          <%= time_ago_in_words(film.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(film.updated_at) %> ago
        </td>

         <td>
      <form action="insert_like" method="post">
      <input type= "hidden" value="<%= film.id %>" name="film_id_from_query">
      <button>Bookmark</button>
   </form>
        </td>

        <td>
          <a href="/films/<%= film.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

